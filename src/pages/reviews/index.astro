---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Backdrop } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/layout/Layout";
import { AllReviewsStrictWrapper } from "~/features/reviews/AllReviews";
import { getAllReviewsProps } from "~/features/reviews/getProps";
import { ReviewsSubNav } from "~/features/reviews/ReviewsSubNav";

const props = await getAllReviewsProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<AstroPageShell
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{ description: deck, type: "website" }}
  title="All Reviews"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Reviews" />
    <ReviewsSubNav active="all" />
    <AllReviewsStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</AstroPageShell>
