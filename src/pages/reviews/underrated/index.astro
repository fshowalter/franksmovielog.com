---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getLayoutBackdropImageProps } from "~/components/layout/getLayoutBackdropImageProps";
import { Layout } from "~/components/layout/Layout";
import { getUnderratedProps } from "~/features/reviews/getReviewsProps";
import { ReviewsSubNav } from "~/features/reviews/ReviewsSubNav";
import { Underrated } from "~/features/reviews/Underrated";

const underratedProps = await getUnderratedProps();
const backdropImageProps = await getLayoutBackdropImageProps("underrated");

const deck = "Four and five star movies with a below-average IMDb rating.";
const metaDescription =
  "The masses are wrong. These are movies have a four or five star review despite a below-average IMDb rating.";
---

<AstroPageShell
  canonical={true}
  meta={{ description: metaDescription }}
  openGraph={{ description: deck, type: "website" }}
  title="Underrated Surprises"
>
  <Layout
    backdrop={{
      breadcrumb: {
        href: "/reviews/",
        text: "Reviews",
      },
      deck,
      imageProps: backdropImageProps,
      title: "Underrated",
    }}
    className="bg-subtle"
  >
    <ReviewsSubNav active="underrated" />
    <Underrated client:load {...underratedProps} />
  </Layout>
</AstroPageShell>
