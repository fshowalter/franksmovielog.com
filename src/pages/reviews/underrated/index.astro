---
import React from "react";

import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Backdrop, BreadcrumbLink } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/layout/Layout";
import { getUnderratedProps } from "~/features/reviews/getProps";
import { ReviewsSubNav } from "~/features/reviews/ReviewsSubNav";
import { UnderratedStrictWrapper } from "~/features/reviews/Underrated";

const props = await getUnderratedProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

const breadcrumb = React.createElement(BreadcrumbLink, {
  children: "Reviews",
  href: "/reviews/",
});
---

<AstroPageShell
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{ description: deck, type: "website" }}
  title="Underrated Surprises"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop
      breadcrumb={breadcrumb}
      deck={deck}
      imageProps={backdropImageProps}
      title="Underrated Surprises"
    />
    <ReviewsSubNav active="underrated" />
    <UnderratedStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</AstroPageShell>
