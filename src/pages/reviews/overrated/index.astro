---
import React from "react";

import { Backdrop } from "~/components/Backdrop";
import { ListWithFiltersLayout } from "~/components/ListWithFiltersLayout";
import { getPropsForOverrated as getProps } from "~/components/Reviews/getProps";
import { Overrated } from "~/components/Reviews/Overrated";
import { ReviewsSubNav } from "~/components/ReviewsSubNav";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

// Create React elements in frontmatter
const backdropElement = React.createElement(Backdrop, {
  deck,
  imageProps: backdropImageProps,
  title: "Overrated",
});

const subNavElement = React.createElement(ReviewsSubNav, {
  active: "overrated",
});
---

<Layout
  canonical={true}
  meta={{
    description: props.metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Overrated Disappointments"
>
  <ListWithFiltersLayout backdrop={backdropElement} subNav={subNavElement}>
    <Overrated client:load {...interactiveProps} />
  </ListWithFiltersLayout>
</Layout>
