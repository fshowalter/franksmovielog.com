---
import React from "react";

import { Backdrop, BreadcrumbLink } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout";
import { getPropsForOverrated as getProps } from "~/components/Reviews/getProps";
import { Overrated } from "~/components/Reviews/Overrated";
import { ReviewsSubNav } from "~/components/Reviews/ReviewsSubNav";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

const breadcrumb = React.createElement(BreadcrumbLink, {
  children: "Reviews",
  href: "/reviews/",
});
---

<Layout
  canonical={true}
  meta={{
    description: props.metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Overrated Disappointments"
>
  <ComponentLayout addGradient className="bg-subtle">
    <Backdrop
      breadcrumb={breadcrumb}
      deck={deck}
      imageProps={backdropImageProps}
      title="Overrated"
    />
    <ReviewsSubNav active="overrated" />
    <Overrated client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
