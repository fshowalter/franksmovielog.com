---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getLayoutBackdropImageProps } from "~/components/layout/getLayoutBackdropImageProps";
import { Layout } from "~/components/layout/Layout";
import { getOverratedProps } from "~/features/reviews/getReviewsProps";
import { Overrated } from "~/features/reviews/Overrated";
import { ReviewsSubNav } from "~/features/reviews/ReviewsSubNav";

const overratedProps = await getOverratedProps();
const backdropImageProps = await getLayoutBackdropImageProps("overrated");

const deck = "One and two star movies with an above-average IMDb rating.";
const metaDescription =
  "Feeling contrarian? Behold my one and two star reviews of movies that somehow received and above-average IMDb rating.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Overrated Disappointments"
>
  <Layout
    backdrop={{
      breadcrumb: {
        href: "/reviews/",
        text: "Reviews",
      },
      deck,
      imageProps: backdropImageProps,
      title: "Overrated",
    }}
    className="bg-subtle"
  >
    <ReviewsSubNav active="overrated" />
    <Overrated client:load {...overratedProps} />
  </Layout>
</AstroPageShell>
