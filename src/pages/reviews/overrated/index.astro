---
import React from "react";

import { Backdrop, BreadcrumbLink } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import { getOverratedProps } from "~/features/reviews/getProps";
import { OverratedStrictWrapper } from "~/features/reviews/Overrated";
import { ReviewsSubNav } from "~/features/reviews/ReviewsSubNav";
import Layout from "~/layouts/Layout.astro";

const props = await getOverratedProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

const breadcrumb = React.createElement(BreadcrumbLink, {
  children: "Reviews",
  href: "/reviews/",
});
---

<Layout
  canonical={true}
  meta={{
    description: props.metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Overrated Disappointments"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop
      breadcrumb={breadcrumb}
      deck={deck}
      imageProps={backdropImageProps}
      title="Overrated"
    />
    <ReviewsSubNav active="overrated" />
    <OverratedStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</Layout>
