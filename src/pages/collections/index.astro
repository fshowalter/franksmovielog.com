---
import { Backdrop } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import { CollectionsStrictWrapper } from "~/features/collections/Collections";
import { getProps } from "~/features/collections/getProps";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{
    description:
      "A sortable index of movie collections reviewed on this site. Sort by name, review count, or title count.",
  }}
  openGraph={{ description: deck, type: "website" }}
  title="Collections"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Collections" />
    <CollectionsStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</Layout>
