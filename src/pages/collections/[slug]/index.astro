---
import React from "react";

import { allCollections } from "~/api/collections";
import { Backdrop } from "~/components/Backdrop";
import { Collection } from "~/components/Collection/Collection";
import { getProps } from "~/components/Collection/getProps";
import { ListWithFiltersLayout } from "~/components/ListWithFiltersLayout";
import Layout from "~/layouts/Layout.astro";

interface Props {
  slug: string;
}

export async function getStaticPaths() {
  const { collections } = await allCollections();

  return collections.map((collection) => {
    return {
      params: {
        slug: collection.slug,
      },
      props: {
        slug: collection.slug,
      },
    };
  });
}

const { slug } = Astro.props;

const props = await getProps(slug);

// Separate layout props from interactive props
const { backdropImageProps, ...interactiveProps } = props;

// Create React elements in front matter
const backdropElement = React.createElement(Backdrop, {
  deck: React.createElement("span", {
    dangerouslySetInnerHTML: { __html: props.value.descriptionHtml },
  }),
  imageProps: backdropImageProps,
  title: props.value.name,
});
---

<Layout
  canonical={true}
  meta={{
    description: `${props.value.name} movie reviews: ${props.value.description} Sort by oldest or newest, best or worst, or title.`,
  }}
  openGraph={{
    description: props.value.description || "",
    type: "website",
  }}
  title={`${props.value.name} movie reviews`}
>
  <ListWithFiltersLayout backdrop={backdropElement}>
    <Collection client:load {...interactiveProps} />
  </ListWithFiltersLayout>
</Layout>
