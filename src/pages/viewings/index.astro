---
import { Backdrop } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import { getProps } from "~/components/Viewings/getProps";
import { Viewings } from "~/components/Viewings/Viewings";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{ description: deck, type: "website" }}
  title="Viewing Log"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Viewing Log" />
    <Viewings client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
