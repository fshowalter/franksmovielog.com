---
import { getOpenGraphBackdropSrc } from "src/api/backdrops";
import { getProps } from "src/components/Viewings/getProps";
import { Viewings } from "src/components/Viewings/Viewings";
import Layout from "src/layouts/Layout.astro";

const props = await getProps();
const openGraphImageSrc = await getOpenGraphBackdropSrc("viewings");
---

<Layout
  title="Viewing Log"
  description="A sortable and filterable list of every movie I've watched since 2012."
  image={openGraphImageSrc}
>
  <Viewings client:load {...props} />
</Layout>
