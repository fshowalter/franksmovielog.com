---
import { AlltimeStats } from "src/components/AlltimeStats/AlltimeStats";
import { getProps } from "src/components/AlltimeStats/getProps";
import Layout from "src/layouts/Layout.astro";

const props = await getProps();
---

<Layout
  title="All-Time Stats"
  description=`${(props.distinctStatYears.length - 1).toString()} Years in Review`
  image="/viewings/stats/og.jpg"
>
  <AlltimeStats {...props} />
</Layout>
