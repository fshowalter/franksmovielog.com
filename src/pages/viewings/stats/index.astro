---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { AlltimeStats } from "~/features/stats/AlltimeStats";
import { getAllTimeStatsProps } from "~/features/stats/getProps";

const props = await getAllTimeStatsProps();
---

<AstroPageShell
  canonical={true}
  meta={{
    description: props.metaDescription,
  }}
  openGraph={{
    description: props.deck,
    type: "website",
  }}
  title="All-Time Stats"
>
  <AlltimeStats {...props} />
</AstroPageShell>
