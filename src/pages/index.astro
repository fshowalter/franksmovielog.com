---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getProps } from "~/features/home/getProps";
import { Home } from "~/features/home/Home";

const props = await getProps();
---

<AstroPageShell
  canonical={true}
  meta={{
    description:
      "The latest reviews from movie critic Frank Showalter. Quality reviews of current, cult, classic, and forgotten films.",
  }}
  openGraph={{ description: props.deck, type: "website" }}
  title="Frank's Movie Log"
>
  <Home {...props} />
</AstroPageShell>
