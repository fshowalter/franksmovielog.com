---
import { Backdrop } from "~/components/Backdrop";
import { CastAndCrew } from "~/components/CastAndCrew/CastAndCrew";
import { getProps } from "~/components/CastAndCrew/getProps";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Cast and Crew"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Cast & Crew" />
    <CastAndCrew client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
