---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Layout } from "~/components/layout/Layout";
import { CastAndCrew } from "~/features/cast-and-crew/CastAndCrew";
import { getProps } from "~/features/cast-and-crew/getProps";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<AstroPageShell
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Cast and Crew"
>
  <Layout
    backdrop={{
      deck,
      imageProps: backdropImageProps,
      title: "Cast & Crew",
    }}
    className="bg-subtle"
  >
    <CastAndCrew client:load {...interactiveProps} />
  </Layout>
</AstroPageShell>
