---
import { Backdrop } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/layout/Layout";
import { CastAndCrewStrictWrapper } from "~/features/cast-and-crew/CastAndCrew";
import { getProps } from "~/features/cast-and-crew/getProps";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Cast and Crew"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Cast & Crew" />
    <CastAndCrewStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</Layout>
