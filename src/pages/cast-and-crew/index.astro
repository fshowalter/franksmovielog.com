---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { getLayoutBackdropImageProps } from "~/components/layout/getLayoutBackdropImageProps";
import { Layout } from "~/components/layout/Layout";
import { CastAndCrew } from "~/features/cast-and-crew/CastAndCrew";
import { getCastAndCrewProps } from "~/features/cast-and-crew/getCastAndCrewProps";

const castAndCrewProps = await getCastAndCrewProps();

const backdropImageProps = await getLayoutBackdropImageProps("cast-and-crew");
const deck = '"Round up the usual suspects."';
const metaDescription =
  "A sortable index of directors, performers, and writers who contributed to the movies reviewed on this site. Sort by name or review count.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Cast and Crew"
>
  <Layout
    backdrop={{
      deck,
      imageProps: backdropImageProps,
      title: "Cast & Crew",
    }}
    className="bg-subtle"
  >
    <CastAndCrew client:load {...castAndCrewProps} />
  </Layout>
</AstroPageShell>
