---
import { getBackdropImageProps } from "~/api/backdrops";
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { BackdropImageConfig } from "~/components/layout/Backdrop";
import { Layout } from "~/components/layout/Layout";
import { CastAndCrew } from "~/features/cast-and-crew/CastAndCrew";
import { getProps } from "~/features/cast-and-crew/getProps";

const props = await getProps();

const backdropImageProps = await getBackdropImageProps(
  "cast-and-crew",
  BackdropImageConfig,
);
const deck = '"Round up the usual suspects."';
const metaDescription =
  "A sortable index of directors, performers, and writers who contributed to the movies reviewed on this site. Sort by name or review count.";
---

<AstroPageShell
  canonical={true}
  meta={{
    description: metaDescription,
  }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Cast and Crew"
>
  <Layout
    backdrop={{
      deck,
      imageProps: backdropImageProps,
      title: "Cast & Crew",
    }}
    className="bg-subtle"
  >
    <CastAndCrew client:load {...props} />
  </Layout>
</AstroPageShell>
