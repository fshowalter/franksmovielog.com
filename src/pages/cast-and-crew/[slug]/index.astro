---
import React from "react";

import { allCastAndCrew } from "~/api/castAndCrew";
import { Backdrop } from "~/components/Backdrop";
import { CastAndCrewMember } from "~/components/CastAndCrewMember/CastAndCrewMember";
import { getProps } from "~/components/CastAndCrewMember/getProps";
import { ListWithFiltersLayout } from "~/components/ListWithFiltersLayout";
import Layout from "~/layouts/Layout.astro";

interface Props {
  slug: string;
}

export async function getStaticPaths() {
  const { castAndCrew } = await allCastAndCrew();

  return castAndCrew.map((member) => {
    return {
      params: {
        slug: member.slug,
      },
      props: {
        slug: member.slug,
      },
    };
  });
}

const { slug } = Astro.props;
const props = await getProps(slug);

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

// Create React elements in frontmatter
const backdropElement = React.createElement(Backdrop, {
  bottomShadow: true,
  deck,
  imageProps: backdropImageProps,
  title: props.value.name,
});
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title={`${props.value.name} movie reviews`}
>
  <ListWithFiltersLayout backdrop={backdropElement}>
    <CastAndCrewMember client:load {...interactiveProps} />
  </ListWithFiltersLayout>
</Layout>
