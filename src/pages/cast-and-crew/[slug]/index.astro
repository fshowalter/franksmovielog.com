---
import React from "react";

import { allCastAndCrew } from "~/api/castAndCrew";
import { Backdrop, BreadcrumbLink } from "~/components/Backdrop";
import { CastAndCrewMember } from "~/components/CastAndCrewMember/CastAndCrewMember";
import { getProps } from "~/components/CastAndCrewMember/getProps";
import { Layout as ComponentLayout } from "~/components/Layout";
import Layout from "~/layouts/Layout.astro";

interface Props {
  slug: string;
}

export async function getStaticPaths() {
  const { castAndCrew } = await allCastAndCrew();

  return castAndCrew.map((member) => {
    return {
      params: {
        slug: member.slug,
      },
      props: {
        slug: member.slug,
      },
    };
  });
}

const { slug } = Astro.props;
const props = await getProps(slug);

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;

const breadcrumb = React.createElement(BreadcrumbLink, {
  children: "Cast & Crew",
  href: "/cast-and-crew/",
});
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title={`${props.value.name} movie reviews`}
>
  <ComponentLayout addGradient className="bg-subtle">
    <Backdrop
      breadcrumb={breadcrumb}
      deck={deck}
      imageProps={backdropImageProps}
      title={props.value.name}
    />
    <CastAndCrewMember client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
