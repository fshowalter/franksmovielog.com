---
import AstroPageShell from "~/astro/AstroPageShell.astro";
import { Backdrop } from "~/components/backdrop/Backdrop";
import { Layout as ComponentLayout } from "~/components/layout/Layout";
import { getProps } from "~/features/watchlist/getProps";
import { WatchlistStrictWrapper } from "~/features/watchlist/Watchlist";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<AstroPageShell
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Watchlist"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Watchlist" />
    <WatchlistStrictWrapper client:load props={interactiveProps} />
  </ComponentLayout>
</AstroPageShell>
