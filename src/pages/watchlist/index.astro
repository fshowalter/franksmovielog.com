---
import { Backdrop } from "~/components/Backdrop";
import { Layout as ComponentLayout } from "~/components/Layout/Layout";
import { getProps } from "~/components/Watchlist/getProps";
import { Watchlist } from "~/components/Watchlist/Watchlist";
import Layout from "~/layouts/Layout.astro";

const props = await getProps();

// Separate layout props from interactive props
const { backdropImageProps, deck, ...interactiveProps } = props;
---

<Layout
  canonical={true}
  meta={{ description: props.metaDescription }}
  openGraph={{
    description: deck,
    type: "website",
  }}
  title="Watchlist"
>
  <ComponentLayout className="bg-subtle">
    <Backdrop deck={deck} imageProps={backdropImageProps} title="Watchlist" />
    <Watchlist client:load {...interactiveProps} />
  </ComponentLayout>
</Layout>
