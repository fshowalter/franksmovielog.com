{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "assignees": ["fshowalter"],
  "rangeStrategy": "pin",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "postUpdateOptions": ["npmDedupe"],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["eslint-plugin-react-hooks"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(-rc)?-?\\.?(?<build>\\d+)"
    }
  ]
}
